<AnchorPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="socialnetwork.gui.ChatController">
   <children>
      <TextField fx:id="messageField" layoutX="413.0" layoutY="354.0" prefHeight="31.0" prefWidth="256.0" />
      <ListView fx:id="chatBox" layoutX="413.0" layoutY="41.0" onMouseClicked="#replyMemorate" prefHeight="273.0" prefWidth="352.0" />
      <Button fx:id="sendButton" layoutX="680.0" layoutY="357.0" mnemonicParsing="false" onAction="#sendMessage" prefHeight="25.0" prefWidth="85.0" text="Send!" />
      <Text fx:id="chatName" layoutX="413.0" layoutY="27.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" wrappingWidth="352.0" />
      <Button layoutX="106.0" layoutY="273.0" mnemonicParsing="false" onAction="#createGroup" prefHeight="31.0" prefWidth="200.0" text="Create group" />
      <Button fx:id="searchButton" layoutX="106.0" layoutY="313.0" mnemonicParsing="false" onAction="#search" prefHeight="31.0" prefWidth="200.0" text="Search friend" />
      <Button fx:id="cancelButton" layoutX="106.0" layoutY="354.0" mnemonicParsing="false" onAction="#cancel" prefHeight="31.0" prefWidth="200.0" text="Exit" />
      <TableView fx:id="chatsTable" layoutX="14.0" layoutY="14.0" prefHeight="249.0" prefWidth="384.0">
        <columns>
          <TableColumn fx:id="chatsColumn" prefWidth="289.0" text="Active chats:" />
          <TableColumn fx:id="buttonColumn" minWidth="0.0" prefWidth="92.0" />
        </columns>
      </TableView>
      <Text fx:id="replyText" layoutX="413.0" layoutY="342.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" wrappingWidth="256.0" />
      <Button fx:id="disableButton" layoutX="680.0" layoutY="325.0" mnemonicParsing="false" onAction="#disableReply" text="Disable reply" />
   </children>
</AnchorPane>
