            <TableColumn fx:id="removeColumn" prefWidth="106.0" text="Remove" />
        </columns>
      </TableView>
      <TextField fx:id="searchField" layoutX="29.0" layoutY="14.0" prefHeight="25.0" prefWidth="443.0" promptText="Search friend" />
      <Button layoutX="501.0" layoutY="14.0" mnemonicParsing="false" onAction="#search" text="Search!" />
      <Button fx:id="createButton" onAction="#create" layoutX="78.0" layoutY="339.0" mnemonicParsing="false" prefHeight="47.0" prefWidth="141.0" text="Create Group">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button fx:id="cancelButton" onAction="#cancel" layoutX="371.0" layoutY="339.0" mnemonicParsing="false" prefHeight="47.0" prefWidth="141.0" text="Exit">
