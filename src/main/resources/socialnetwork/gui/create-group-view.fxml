<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="socialnetwork.gui.CreateGroupController">
   <children>
      <TableView fx:id="createGroupTable" layoutX="14.0" layoutY="46.0" prefHeight="290.0" prefWidth="573.0">
        <columns>
          <TableColumn fx:id="foundFriendsColumn" prefWidth="363.5" text="Friends found:" />
